{% extends "AdminBundle:layouts:app.html.twig" %}
    {% block content %}
        {% embed "AdminBundle:partials:formDiv.html.twig" %}
            {% block formDiv %}
                {{ form_start(form) }}

                <label>User</label>
                <select id="users_roles_userId" name="userId" disabled="disabled">
                    <option value="{{ user.id }}">{{ user.username }}</option>
                </select>
                <br>

                {% for role in allRoles %}
                    {% if role.id in usersRolesIdsArray %}
                        <input id="users_roles_roleId" name="roleId[]" type="checkbox" value="{{ role.id }}" checked>{{ role.name }}<br>
                    {% else %}
                        <input id="users_roles_roleId" name="roleId[]" type="checkbox" value="{{ role.id }}" >{{ role.name }}<br>

                    {% endif %}
                {% endfor %}

                <ul>
                    <li>
                        <a href="{{ path('usersroles_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <input type="submit" value="Edit" />
                    </li>
                    <li>

                    </li>
                </ul>
                {{ form_end(form) }}

            {% endblock %}
        {% endembed %}
    {% endblock %}

